<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Filter</key>
	<dict>
		<key>Bundles</key>
		<array>
			<string>com.apple.camera</string>
			<string>com.apple.mobilesafari</string>
			<string>com.apple.springboard</string>
		</array>
	</dict>
	
	<!-- App Group entitlements for cross-process communication -->
	<key>com.apple.security.application-groups</key>
	<array>
		<string>group.com.customvcam.vcam</string>
	</array>
	
	<!-- File system access for robust state management -->
	<key>com.apple.private.security.no-container</key>
	<true/>
	
	<!-- Notification access for real-time state updates -->
	<key>com.apple.private.usernotifications.critical-alerts</key>
	<true/>
</dict>
</plist> 